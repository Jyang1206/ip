<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<fx:root alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="400.0"
         stylesheets="@../css/dialog-box.css" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox spacing="4.0">
            <children>
                <Label fx:id="dialog" minHeight="-Infinity" styleClass="message-label" text="Label" wrapText="true" maxWidth="280.0">
                    <padding>
                        <Insets bottom="6.0" left="8.0" right="8.0" top="6.0"/>
                    </padding>
                    <HBox.margin>
                        <Insets left="7.0" right="7.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="Century Gothic" size="12.0"/>
                    </font>
                </Label>
                <Label fx:id="timestamp" styleClass="timestamp" text="00:00"/>
            </children>
        </VBox>
        <ImageView id="displayPicture" fx:id="displayPicture" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true"
                   preserveRatio="true"/>
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0"/>
    </padding>
</fx:root>
