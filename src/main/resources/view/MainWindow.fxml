<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="420.0" stylesheets="@../css/main.css, @../css/theme-light.css" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ubersuper.utils.ui.MainWindow">
    <children>
        <!-- Header -->
        <HBox spacing="10.0" styleClass="header" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Label styleClass="title" text="UberSuper"/>
                <Region HBox.hgrow="ALWAYS"/>
                <ToggleButton fx:id="themeToggle" onAction="#handleChangeMode" text="Dark"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="12.0" right="12.0" top="10.0"/>
            </padding>
        </HBox>

        <!-- Messages -->
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vvalue="1.0" AnchorPane.bottomAnchor="74.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="52.0">
            <content>
                <VBox fx:id="dialogContainer" prefWidth="388.0" spacing="6.0" styleClass="dialog-container"/>
            </content>
        </ScrollPane>

        <!-- Input Bar -->
        <HBox spacing="8.0" styleClass="input-bar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">
            <children>
                <TextArea fx:id="userInput" prefRowCount="2" promptText="Type a message" wrapText="true"
                          styleClass="input-text" HBox.hgrow="ALWAYS"/>
                <Button fx:id="sendButton" onAction="#handleUserInput" text="Send"/>
            </children>
            <padding>
                <Insets bottom="12.0" left="12.0" right="12.0" top="10.0"/>
            </padding>
        </HBox>
    </children>
</AnchorPane>
